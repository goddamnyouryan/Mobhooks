<% title "Mobile Campaign - #{@campaign.business.name} - #{@campaign.offer}" %>

<div style="float:left;width:410px;">
	
	<h2 id="business_name"><%= link_to "#{@campaign.business.name}", business_path(@campaign.business) %></h2>

	<p><%= link_to "#{image_tag @campaign.business.photo.url(:main)}", business_path(@campaign.business), :style => "margin-left: 10px; float:left;"  %><%= link_to "Own this Business? Click here.", business_owners_path, :class => 'button', :style => "float:left;margin: 30px 0 0 10px;" %></p>
	
	<div class="clear"></div>

	<%= link_to "view all #{@campaign.business.name} campaigns", business_path(@campaign.business), :class => "link", :style => "margin: 10px; float:left;"  %>
	
	<div class="clear"></div>

<h2 style="margin: 25px 0 0;">Rating</h2>

<div id="votes">
	<%= render :partial => "campaigns/score", :locals => { :campaign => @campaign } %>
	
	<h3 id="votes_count">
		<span id="votes_for" style="color:#00ff00"><%= image_tag "votes_up.gif" %><%= @campaign.votes_for %></span><br />
		<span id="votes_against" style="color:#ff0000"><%= image_tag "votes_down.gif", :style => "margin-top:3px;position:relative;top:6px;" %><%= @campaign.votes_against %></span>
	</h3>
</div>

<% if current_user %>
<div id="voting">
	<% unless current_user.voted_for?(@campaign) %>
		<%= link_to_remote "this deal worked for me.", :url => { :controller => 'campaigns', :action => 'vote_up', :campaign => @campaign }, :html => { :id => "vote_up" } %><br />
		<%= link_to_remote "this deal did not work.", :url => { :controller => 'campaigns', :action => 'vote_down', :campaign => @campaign }, :html => { :id => "vote_down" } %>
	<% end %>	
</div>
<% end %>

<div class="clear"></div>

<h2 id="reviews">Reviews</h2>

<% unless @campaign.reviews.size == 0 %>

<ul id="comments">

<% @campaign.reviews.each do |c| %>
<li>
	<%= c.message %><br />
	<% @reviewer = User.find(c.reviewer_id) %>
	<%= link_to @reviewer.login, user_path(@reviewer) %>
	<span class="date"><%= c.created_at.to_date %></span>
</li>
<% end %>

</ul>
<div class="clear"></div>
<%= link_to "view all reviews (#{@campaign.reviews.count})", campaign_reviews_path(@campaign), :class => "link", :style => "margin-left: 10px;" %>

<% else %>
<div class="clear"></div>
<%= link_to "no reviews yet. be the first, click here!", campaign_reviews_path(@campaign), :class => "link", :style => "margin: 0;" %>

<% end %>

<% unless @related.nil? %>
<h2 style="margin:25px 0 0;" >Similar Offers</h2>
<ul id="similar">
<% @related.each do |c| %>
<li>
	<%= link_to "#{image_tag c.business.photo.url(:tiny)}", campaign_path(c) %>
	<div style="float:left;margin:-3px 0 0 20px;width:150px;">
		<h4><%= link_to c.business.name, campaign_path(c) %></h4>
		<h5><%= link_to c.offer, campaign_path(c) %></h5>
	</div>
	<%= link_to "View Offer", campaign_path(c), :class => "button", :style => "float:right; font-size: 12px;margin-top:5px;" %>
	<div class="clear"></div>
</li>
<% end %>
</ul>
<% end %>

<div style="float: left;">
<script type="text/javascript"><!--
google_ad_client = "ca-pub-2919877323911591";
/* Mobhooks */
google_ad_slot = "6421093481";
google_ad_width = 300;
google_ad_height = 250;
//-->
</script>
<script type="text/javascript"
src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
</script>
</div>

</div>

<div style="float:left;width:520px;">

<h2 id="offer"><%=h @campaign.offer %></h2>

<h2 class="button" style="min-width:350px; margin: 20px 0;text-align:center; cursor:default;">Text <%=h @campaign.keyword %> to <%=h @campaign.shortcode %></h2>

<p>
	<span style="margin:2px 10px 0 0;float:left;"><a href="http://twitter.com/share" class="twitter-share-button" data-count="none">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script></span>
	
	<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="<%= request.url %>" show_faces="true" width="450"></fb:like>
</p>

<p style="margin:0;">
	<% if @campaign.business.address? %>	
		<%= @map.div(:width => 540, :height => 200) %>
	<% else %>
		<%= image_tag @campaign.photo.url(:show) %>
	<% end %>
</p>

<h2 class="campaign_details_header">
	Where:
	<% if @campaign.business.address? %>
	<span class="campaign_description"><%= @campaign.business.address %> <%= @campaign.business.city %> <%= @campaign.business.state %>, <%= @campaign.business.zip %>
		<% if current_user && ! current_user.profile.nil? && current_user.profile.zip? %>
			<em>(<%= pluralize(@distance, "mile") %>)</em>
		<% end %>
	</span>
	<% else %>
	<span class="campaign_description">
		<%= link_to "Enter the correct business address and get 100 points!", edit_business_path(@campaign.business), :class => "link", :style => "font-size:18px;" %>
	<% end %>
</h2>


<h2 class="campaign_details_header">
	Type:
	<span class="campaign_description"><%=h @campaign.kind %></span>
</h2>

<h2 class="campaign_details_header">
	Tags:
	<span class="campaign_description">
		<% unless @campaign.tag_list.empty? %>
			<% @campaign.tag_counts.each do |tag| %>
				<%= link_to tag.name, { :controller => 'campaigns', :action => 'index', :search => tag.name }, :class => "link", :style => "font-size:18px;" %>
			<% end %>
		<% end %>
	</span>
</h2>

<h2 class="campaign_details_header">Details:</h2>
	<span class="campaign_description"><%=h @campaign.details %></span>

<p>
  <strong>Submitted by:</strong>
  <%= link_to @campaign.user.login, user_path(@campaign.user) %>
</p>

<% if current_user == @campaign.user %>
<p>
  <%= link_to "Edit", edit_campaign_path(@campaign) %> |
  <%= link_to "Delete", @campaign, :confirm => 'Are you sure?', :method => :delete %> |
</p>

<% end %>
	
</div>

<div class="clear"></div>