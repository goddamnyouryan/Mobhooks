<div style="float:left;">

<h2 id="featured">Featured Deals</h2>

<ul id="sponsored">
	<% @sponsored.each do |s| %>
	<li>
		<% if s.business.photo.exists? %>
			<%= link_to "#{image_tag s.business.photo.url(:main)}", campaign_path(s) %>
