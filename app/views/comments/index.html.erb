<% title "Comments" %>

<% if @comments.nil? %>
No comments!
<%= @user.login %>

<% else %>

<table>
  <tr>
    <th>User</th>
    <th>Commenter</th>
    <th>Message</th>
  </tr>

  <% for comment in @comments %>
    <tr>
      <td><%=h comment.user_id %></td>
      <td><%=h comment.commenter_id %></td>
      <td><%=h comment.message %></td>
      <td><%= link_to "Show", comment %></td>
      <td><%= link_to "Edit", edit_comment_path(comment) %></td>
      <td><%= link_to "Destroy", comment, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<% end %>

<% form_for @comment do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag(:user_id, @user.id) %>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p><%= f.submit %></p>
<% end %>