<% title "Forgot Password" %>

<h2>Forgot Password</h2>

<h3>Fill out the form below and instructions to reset your password will be emailed to you:</h3>

<% form_tag password_resets_path do %>
  <p>
    <h3 style="margin:0;"><span style="color:#EDA02C;font-size: 24px;">*</span>Email:</h3>
	<%= text_field_tag "email" %>
  </p>

  <p><%= submit_tag "Reset my password", :class => 'button', :style => "font-size:24px;" %></p>
<% end %>