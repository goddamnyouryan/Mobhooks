<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Mobhooks - <%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
	<%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
	<% if params[:controller] == "campaigns" && params[:action] == "show" && @map.exists? %>
		<%= GMap.header %>
		<%= @map.to_html %>
	<% end %>
  </head>
  <body>
    <div id="container">
	<% if params[:controller] == "home" %>
		<h1 id="home_title">Mobhooks</h1>
	<% else %>
		<h1 id="title">Mobhooks</h1>
	<% end %>
		<ul id="nav">
		  <% if current_user %>
			<li><%= link_to "Deals", root_path %></li>
			<li><%= link_to "The Family", thefamily_path %></li>
			<li><%= link_to "Profile", user_path(current_user) %></li>
			<li><%= link_to "Submit a Campaign", new_campaign_path %></li>
			<li><%= link_to "Logout", logout_path %></li>
		  <% else %>
			<li><%= link_to "Deals", root_path %></li>
			<li><%= link_to "Submit a Campaign", new_campaign_path %></li>
			<li><%= link_to "The Family", thefamily_path %></li>
			<li><%= link_to "Register", new_user_path %></li>
			<li><%= link_to "Login", login_path %></li>
		  <% end %>
		</ul>
		
		
		<div id="search">
		<% form_tag campaigns_path, :method => 'get' do %>
			<p>Find a deal (e.g. electronics, bank, food, etc..)</p>
			<p>
		    <%= text_field_tag :search, params[:search] %>
		    Near:
		    <%= text_field_tag :near, params[:near] %>
		    <%= submit_tag "Search", :name => nil %>
		  </p>
		<% end %>
		</div>
		
		<div class="clear"></div>
	
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>
  </body>
</html>
