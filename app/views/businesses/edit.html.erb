<% title "Edit Business" %>

<% if @business.kind == "local" %>

<h2><% unless @business.address? %>Earn up to 20 easy points now!
Enter the address for <%= @business.name%> and get 10 points!<br /><% end %>
<% unless @business.url? %>Enter the website for <%= @business.name%> and get 5 points!<br /><% end %>
<% unless @business.photo.exists? %>Upload the logo or storefront picture for <%= @business.name%> and get 5 points!<% end %>
</h2>

<%= render :partial => 'form' %>

<% if session[:campaign_continue] %>
<p>
  <%= link_to "Don't know this info? <br />Click here to skip to the campaign page.", skip_business_path, :business => session[:campaign_continue], :class => "button", :style => "float:right;text-align:center;" %>
</p>
<% end %>

<div class="clear"></div>

<% elsif @business.kind == "brand" || @business.kind == "chain" %>

<h2><% unless @business.url? %>Enter the website for <%= @business.name%> and get 5 points!<br /><% end %>
<% unless @business.photo.exists? %>Upload the logo or storefront picture for <%= @business.name%> and get 5 points!<% end %>
</h2>

<%= render :partial => 'brand' %>

<% if session[:campaign_continue] %>
<p>
  <%= link_to "Don't know this info? <br />Click here to skip to the campaign page.", skip_business_path, :business => session[:campaign_continue], :class => "button", :style => "float:right;text-align:center;" %>
</p>
<% end %>

<div class="clear"></div>

<% else %>

Sorry you shouldn't be here!

<% end %>