<% form_for @business, :html => { :multipart => true } do |f| %>
	
	  <%= f.error_messages %>
	  <% if @business.url.nil? || @business.url == "http://" %>
	  <p>
	    <h3 style="margin:0;">Business website address:</h3>
	    <%= f.text_field :url, :value => "http://", :class => "large_form" %>
	  </p>
	  <% end %>
	
	<% unless @business.photo.exists? %>
	  <p>
		<h3 style="margin:0;">Upload Business Logo or Photo:</h3>
		<%= f.file_field :photo %>
		<p>
		<a href="http://www.google.com/images?hl=en&source=imghp&biw=1440&bih=747&q=<%= @business.name %>+logo&gbv=2&aq=f&aqi=g10&aql=&oq=" class="link" target="_blank" style="margin-top:15px;">Click here to search the web for the <%= @business.name %> logo.</a></p>
	  </p>
	  </p>
	<% end %>

	  <p><%= f.submit "Submit Business", :class => 'button' %></p>
	<% end %>