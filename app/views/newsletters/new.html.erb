<% title "Sign up for the Newsletter" %>

<h2>Sign Up for the MobHooks Newletter</h2>
<h3>And get emails about awesome text deals in your area</h3>

<% form_for @newsletter do |f| %>
  <%= f.error_messages %>
  <p>
    <h3 style="margin:0;"><span style="color:#EDA02C;font-size: 24px;">*</span>Email Address:</h3>
    <%= f.text_field :email %>
  </p>
  <p><%= f.submit "Sign Up", :class => 'button' %></p>
<% end %>


