<div class="user_image">
	<% unless @user.profile.nil? %>
		<% unless @user.profile.photo.exists? %>
			<%= image_tag "missing_profile.png" %>
		<% else %>
			<%= image_tag @user.profile.photo.url(:thumb) %>
		<% end %>
	<% else %>
		<%= image_tag "missing_profile.png" %>
	<% end %>
	<h4><%= @user.points %></h4>
</div>