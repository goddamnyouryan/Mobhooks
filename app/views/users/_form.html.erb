<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <h3 style="margin:0;">Username:</h3>
    <%= f.text_field :login %>
  </p>
  <p>
    <h3 style="margin:0;">Email Address:</h3>
    <%= f.text_field :email %>
  </p>
  <p>
    <h3 style="margin:0;">Password:</h3>
    <%= f.password_field :password %>
  </p>
  <p>
    <h3 style="margin:0;">Confirm Password:</h3>
    <%= f.password_field :password_confirmation %>
  </p>
  <h3 style="margin:25px 0;"><%= f.check_box :terms %>You have read and agree to our <%= link_to 'terms of service', terms_path, :class => 'link' %></h3>
  <p><%= f.submit "Sign Up", :class => 'button' %></p>
<% end %>
